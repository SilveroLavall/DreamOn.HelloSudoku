@using DreamOn.HelloSudoku;
@page "/counter"
@rendermode InteractiveServer
<PageTitle>Counter</PageTitle>
<h1>Counter</h1>
<p role="status">Current count: @currentCount</p>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<h1>Hello</h1>
<p role="status">Sudoku result: @SudokuResult</p>
<button class="btn btn-primary" @onclick="GetHelloSudoku">Click me</button>

@code {
    private int currentCount = 0;
    private string SudokuResult = string.Empty;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void GetHelloSudoku()
    {
        var result = (new SudokuEngine_20250130(new())).StartProcessingSudokuPuzzles();
        SudokuResult = result.ToJson();
    }
}
